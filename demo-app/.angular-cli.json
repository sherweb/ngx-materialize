{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "ng2-materialize-demo-app"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        "favicon.ico",
        "app/validation/markdown",
        "app/validation/validation-binding/markdown",
        "app/validation/validation-form-state/markdown",
        "app/validation/validation-ngmodel/markdown",
        "app/validation/validation-playground/markdown"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "styles.scss",
        "../node_modules/materialize-css/dist/css/materialize.min.css",
        "../node_modules/mdi/css/materialdesignicons.min.css",
        "../node_modules/highlightjs/styles/default.css",
        "../node_modules/prismjs/themes/prism.css",
        "../node_modules/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.css"
      ],
      "scripts": [
        "../node_modules/jquery/dist/jquery.min.js",
        "../node_modules/materialize-css/dist/js/materialize.min.js",
        "../node_modules/highlightjs/highlight.pack.min.js",
        "../node_modules/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.concat.min.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json"
    },
    {
      "project": "src/tsconfig.spec.json"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "scss",
    "component": {
      "inlineTemplate": false,
      "inlineStyle": false,
      "spec": true
    }
  }
}
